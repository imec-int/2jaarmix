@import style


body
	background-color qbackgroundcolor

.content
	width 100%
	text-align center

.title
	font-weight bold
	font-size 48px

.buttons
	width 204px
	height 204px
	margin-left auto
	margin-right auto

.picturebutton, .q, .screw
	width 96px
	height 96px
	vertical-align top
	cursor pointer
	color offwhite
	font-weight bold
	text-align center
	line-height 96px

.picturebutton
	float left

	.userimage
		width 100%
		height 100%
		cursor pointer

	.spinner
		display none
		position absolute
		left 33px
		top 32px
		width 32px
		height 32px

	.fileinput
		height 100%
		width 100%
		position absolute
		left 0px
		right 0px
		opacity 0
		cursor pointer

.q
	float left
	background-color qgreen
	font-size 12px
	margin-left 12px

.screw
	float right
	background-color qred
	font-size 12px
	margin-top 12px


.youvoted
	display none
	margin-top 20px
	font-size 22px


